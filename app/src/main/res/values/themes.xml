<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cashcarplus" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_orange1</item>
        <item name="colorPrimaryDark">@color/grayscale_wt</item>
        <item name="android:colorPrimaryDark">@color/grayscale_wt</item>
        <item name="colorPrimaryVariant">@color/brand_orange3</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/brand_orange1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/textinputlayout_form</item>
        <item name="android:editTextStyle">@style/NotoSansEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/NotoSansRadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/NotoSansCheckboxStyle</item>
        <item name="android:textViewStyle">@style/NotoSansTextViewStyle</item>
    </style>

    <style name="Theme.Cashcarplus.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/brand_orange1</item>
    </style>


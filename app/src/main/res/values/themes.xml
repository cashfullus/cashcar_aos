    <!-- Form Theme -->
    <style name="input_form" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@color/grayscale_bk</item>
        <item name="android:background">@drawable/input_form_selector</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="textinputlayout_form" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/input_form_selector</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/input_text_color</item>

        <item name="android:textCursorDrawable">@color/grayscale_bk</item>
        <item name="android:textColorHint">@color/grayscale_400</item>
        <item name="hintTextColor">@color/grayscale_400</item>

        <item name="errorTextColor">@color/system_no</item>
    </style>

    <!-- Old Version -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="NotoSansTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosanskr</item>
    </style>
    <style name="NotoSansEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/notosanskr</item>
    </style>
    <style name="NotoSansRadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">

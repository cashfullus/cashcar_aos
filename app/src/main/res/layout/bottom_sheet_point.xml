<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_modal">

    <ImageView
        android:id="@+id/btnBottomSheetPointX"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_btn_x"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBottomSheetPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 이용 내역"
        style="@style/display_16_M"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/btnBottomSheetPointAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전체"
        android:textColor="@color/selector_bottomsheet_text_color"
        style="@style/title_14_R"
        app:layout_constraintTop_toBottomOf="@+id/tvBottomSheetPoint"
        android:paddingVertical="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/btnBottomSheetPointSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="적립"
        android:textColor="@color/selector_bottomsheet_text_color"
        style="@style/title_14_R"
        app:layout_constraintTop_toBottomOf="@+id/btnBottomSheetPointAll"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/btnBottomSheetPointWithdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="출금"
        android:textColor="@color/selector_bottomsheet_text_color"
        style="@style/title_14_R"
        app:layout_constraintTop_toBottomOf="@+id/btnBottomSheetPointSave"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/btnBottomSheetPointDonate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기부"
        android:textColor="@color/selector_bottomsheet_text_color"
        style="@style/title_14_R"
        app:layout_constraintTop_toBottomOf="@+id/btnBottomSheetPointWithdraw"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
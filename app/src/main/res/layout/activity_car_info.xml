<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.car.CarInfoActivity">
    <data>
        <variable
            name="activity"
            type="com.cashfulus.cashcarplus.ui.car.CarInfoActivity" />
        <variable
            name="viewModel"
            type="com.cashfulus.cashcarplus.ui.car.CarInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.cashfulus.cashcarplus.view.UpgradedToolbar
            android:id="@+id/toolbarAddInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:leftButtonImg="@drawable/ic_btn_back"
            app:rightButtonImg="@drawable/ic_btn_trash"
            app:title="차량 정보"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarAddInfo"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCarTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제조국"
                    style="@style/title_12_R"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCarKorean"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_button"
                    android:text="국산"
                    style="@style/title_14_M"
                    android:textColor="@color/selector_button_text_color"
                    app:layout_constraintTop_toBottomOf="@+id/tvCarTitle1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnCarForeign"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCarForeign"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_button"
                    android:text="수입"
                    style="@style/title_14_M"
                    android:textColor="@color/selector_button_text_color"
                    app:layout_constraintTop_toTopOf="@+id/btnCarKorean"
                    app:layout_constraintStart_toEndOf="@+id/btnCarKorean"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/tvCarTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제조사"
                    style="@style/title_12_R"
                    app:layout_constraintTop_toBottomOf="@+id/btnCarKorean"
                    app:layout_constraintStart_toStartOf="@+id/tvCarTitle1"
                    android:layout_marginTop="20dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCarCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvCarTitle2">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spCarCompany"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_form_enable"
                        android:entries="@array/korean_company"
                        android:spinnerMode="dialog"
                        style="@style/title_14_R"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="16dp"
                        android:paddingHorizontal="16dp"/>
                    <com.cashfulus.cashcarplus.view.UpgradedEdittext
                        android:visibility="gone"
                        android:id="@+id/etCarCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/title_14_R"
                        app:hint="브랜드명을 입력해주세요."
                        app:text="@={viewModel.company}"
                        app:inputType="textShortMessage"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="64dp" />
                    <ImageView
                        android:id="@+id/ivCarCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/ic_spinner_triangle"
                        app:layout_constraintEnd_toEndOf="@+id/spCarCompany"
                        app:layout_constraintTop_toTopOf="@+id/spCarCompany"
                        app:layout_constraintBottom_toBottomOf="@+id/spCarCompany"
                        android:layout_marginEnd="19dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvCarTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차량 모델명"
                    style="@style/title_12_R"
                    app:layout_constraintTop_toBottomOf="@+id/clCarCompany"
                    app:layout_constraintStart_toStartOf="@+id/tvCarTitle1"
                    android:layout_marginTop="20dp"/>
                <com.cashfulus.cashcarplus.view.UpgradedEdittext
                    android:id="@+id/etCarModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint="제네시스GV70"
                    app:inputType="textShortMessage"
                    app:text="@={viewModel.modelName}"
                    app:layout_constraintTop_toBottomOf="@+id/tvCarTitle3"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="16dp"/>

                <TextView
                    android:id="@+id/tvCarTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연식"
                    style="@style/title_12_R"
                    app:layout_constraintTop_toBottomOf="@+id/etCarModel"
                    app:layout_constraintStart_toStartOf="@+id/tvCarTitle1"
                    android:layout_marginTop="20dp"/>
                <com.cashfulus.cashcarplus.view.UpgradedEdittext
                    android:id="@+id/etCarYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:inputType="numberSigned"
                    app:hint="2018"
                    app:text="@={viewModel.year}"
                    app:layout_constraintTop_toBottomOf="@+id/tvCarTitle4"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="16dp"/>

                <TextView
                    android:id="@+id/tvCarTitle5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차량번호"
                    style="@style/title_12_R"
                    app:layout_constraintTop_toBottomOf="@+id/etCarYear"
                    app:layout_constraintStart_toStartOf="@+id/tvCarTitle1"
                    android:layout_marginTop="20dp"/>
                <com.cashfulus.cashcarplus.view.UpgradedEdittext
                    android:id="@+id/etCarNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint="123가4567"
                    app:inputType="textShortMessage"
                    app:text="@={viewModel.carNumber}"
                    app:layout_constraintTop_toBottomOf="@+id/tvCarTitle5"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCarAdd"
                    style="@style/display_16_M"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/selector_button"
                    android:text="수정하기"
                    android:textColor="@color/grayscale_400"
                    app:layout_constraintTop_toBottomOf="@+id/cbCarSupporters"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="40dp"/>

                <com.cashfulus.cashcarplus.view.SupportersCheckbox
                    android:id="@+id/cbCarSupporters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:checkState="2"
                    app:isChecked="@={viewModel.isSupporters}"
                    app:layout_constraintTop_toBottomOf="@+id/etCarNumber"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="19dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.cashfulus.cashcarplus.view.LoadingDialogView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:visibleOrGone="@{viewModel.isDialogVisible}"
            tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
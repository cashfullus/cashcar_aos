<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_popup"
    android:layout_marginHorizontal="16dp">

    <TextView
        android:id="@+id/tvPopup"
        android:text="차량은 최대 3대까지만 등록 가능합니다."
        android:textSize="16dp"
        android:textColor="#FF020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/btnPopupOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:background="@android:color/transparent"
        style="@style/display_16_M"
        android:textColor="@color/brand_orange1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPopup"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/btnPopupCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:background="@android:color/transparent"
        style="@style/display_16_M"
        app:layout_constraintBottom_toBottomOf="@+id/btnPopupOk"
        app:layout_constraintEnd_toStartOf="@+id/btnPopupOk"/>

</androidx.constraintlayout.widget.ConstraintLayout>
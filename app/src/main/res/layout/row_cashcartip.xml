<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rowCashcartip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="17dp">
    
    <ImageView
        android:id="@+id/ivRowCashcartip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="h, 16:10"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp"/>
    
    <TextView
        android:id="@+id/tvRowCashcartipTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/display_16_B"
        app:layout_constraintTop_toBottomOf="@+id/ivRowCashcartip"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tvRowCashcartipContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/body_14_R_lh24"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@+id/tvRowCashcartipTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
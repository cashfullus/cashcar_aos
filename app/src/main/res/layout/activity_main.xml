<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cashfulus.cashcarplus.ui.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tabMain"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,375:57"
        app:tabIndicatorColor="@color/orange"
        app:tabIconTint="@null"
        app:tabTextColor="@color/selector_tabmain_text_color"
        app:tabTextAppearance="@style/TabMainStyle"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicator="@null"
        app:tabMaxWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!--
        android:background="@drawable/tab_main_background"
        app:tabIconTint="@color/tab_selector"
    -->


</androidx.constraintlayout.widget.ConstraintLayout>
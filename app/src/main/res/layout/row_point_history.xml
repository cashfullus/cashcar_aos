<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/tvPointHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지파운데이션 기부"
        style="@style/title_14_R"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvPointHistoryRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.04.06 14:36:08"
        style="@style/title_12_R"
        android:textColor="@color/grayscale_400"
        app:layout_constraintTop_toBottomOf="@+id/tvPointHistoryTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvPointHistoryPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 30,000"
        style="@style/display_16_M"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
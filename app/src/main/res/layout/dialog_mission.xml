<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog_welcome">
    
    <ImageView
        android:id="@+id/btnDialogMissionX"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_btn_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tvDialogMissionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신청한 서포터즈 활동에 실패했습니다 :("
        style="@style/display_16_M"
        app:layout_constraintTop_toBottomOf="@+id/btnDialogMissionX"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvDialogMissionContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서포터즈 활동 미션 인증에 실패하였습니다.\n활동 미행으로 리워드는 지급해드리지 않으며 다른 서포터즈 활동에 지원해주세요."
        style="@style/body_14_R_lh24"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogMissionTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"/>
    
    <Button
        android:id="@+id/btnDialogMission"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_form_active"
        android:text="확인"
        style="@style/display_16_B"
        android:textColor="@color/grayscale_wt"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogMissionContents"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
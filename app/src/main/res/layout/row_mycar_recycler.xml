<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rowMyCar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/row_mycar_supporters"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvRowMyCarNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="49ë‚˜8594"
        style="@style/display_16_M"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvRowMyCarYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021"
        style="@style/title_14_R"
        android:textColor="@color/grayscale_500"
        app:layout_constraintTop_toBottomOf="@+id/tvRowMyCarNumber"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginStart="2dp"/>

    <TextView
        android:id="@+id/tvRowMyCarBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMW"
        style="@style/display_16_M"
        app:layout_constraintTop_toTopOf="@+id/tvRowMyCarNumber"
        app:layout_constraintBottom_toBottomOf="@+id/tvRowMyCarNumber"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvRowMyCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="330E"
        style="@style/display_16_M"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>